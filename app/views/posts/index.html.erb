<h1>Posts</h1>

<%= link_to 'New Post', new_post_path %>
<br>
    <table>
        <tr>
            <th>Title</th>
            <br>
            <th>Text</th>
            <th>User</th>
            <th colspan="2"></th>
        </tr>

        <% @posts.each do |post|  %>
            <tr>
                <td>
                    <%= post.title %>
                </td>
                <td>
                    <%= post.text %>
                </td>
                <td>
                    <%= post.user.email %>
                </td>
                <td>
                        <%= link_to 'Show', post_path(post) %>
                </td>
                <% if post.user == current_user %>
                <td>
                    <%= link_to 'Edit', edit_post_path(post) %>
                </td>
                <td>
                <%= link_to 'Destroy', posts_path, 
                    method: :delete,
                    data: { confirm: 'Really? You want to delete this?'}
                %>
                </td>
                <% end %>
            </tr>
            <% end %>

    </table>